---
import { getCollection } from 'astro:content'
import ArticleCard from '../components/ArticleCard.astro'
import PageLayout from '../layouts/PageLayout.astro'

const description = "Projets parfois aboutis. Expérimentations étranges. Code en dehors des tendances. Il y a un peu de tout et surtout beaucoup de moi."
const title = 'Projets'
const projects = await getCollection('projects')
---

<PageLayout description={description} title={title}>
    <div class="articles">
        {projects.map(project =>
            <ArticleCard
                cover={project.data.cover}
                coverAlt={project.data.coverAlt}
                tags={project.data.tags.sort()}
                title={project.data.title}
                url={`/projects/${project.slug}`}
            />
        )}
    </div>
</PageLayout>

<style>
    .articles {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }
</style>
